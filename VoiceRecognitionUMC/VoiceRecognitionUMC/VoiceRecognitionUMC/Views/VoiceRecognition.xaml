<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceRecognitionUMC.Views.VoiceRecognition"
             Title="Meting">
    <ContentPage.Content>
        <StackLayout Margin="10,50,10,10">
            <Button Text="Start" Command="{Binding StartRecordingCommand}" IsEnabled="{Binding Enabled}"/>
            <Label Text="{Binding RecognizedText}" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>